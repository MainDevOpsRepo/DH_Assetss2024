@page
@model DevicesModel
@{
    ViewData["Title"] = "Devices";
}

<html lang="en">

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DH_Assets.styles.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <!-- Page Content-->
    <div class="container px-4 px-lg-5">
        <!-- Heading Row-->
        <div class="row gx-4 gx-lg-5 align-items-center my-5">

            <h1>Dispositivos</h1>
            <p>
                Sección dedicada a la información básica de la compañía. Esta información es necesaria para asignarle los datos
                al inventario de Dispositivos.
            </p>
            <div class="container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Marca</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Serie</th>
                            <th scope="col">Color</th>
                            <th scope="col">Fecha Registro</th>
                            <th scope="col">Tipo de Dispositivo</th>
                            <th scope="col">Estatus</th>
                            <th scope="col">Editar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Dell</td>
                            <td>Inspiron 200</td>
                            <td>1234567890abc</td>
                            <td>Negra</td>
                            <td>10/06/2023</td>
                            <td>    </td>
                            <td>Active</td>
                            <td>
                                <button type="button" data-toggle="modal" data-target="#miModal" class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>Dell</td>
                            <td>Inspiron 200</td>
                            <td>1234567890abc</td>
                            <td>Negra</td>
                            <td>10/06/2023</td>
                            <td>    </td>
                            <td><span class="badge bg-danger">Inactive</span></td>
                            <td>
                                <button type="button" data-toggle="modal" data-target="#miModal" class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </button>
                            </td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    <!------------------------- MODAL------------------------------>
    <div class="modal" id="miModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Encabezado del Modal -->
                <div class="modal-header">
                    <div class="col-md-7">
                        <h5 class="modal-title">Editar información de los Dispositivos</h5>
                    </div>
                    <div class="w-100">
                        <button type="button" id="closebutton" class="close ml-auto" data-dismiss="modal">&times;</button>
                    </div>
                </div>

                <!-- Contenido del Modal -->

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtCompanyName" runat="server" class="form-control" placeholder="CompanyName" name="Nombre de la Compañía" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtCompanyName" Enabled="true"
                                                            Display="None" ValidationGroup="CompanyName" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtApellidos" runat="server" class="form-control" placeholder="Marca" name="Marca" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtMarca" Enabled="true"
                                                            Display="None" ValidationGroup="Marca" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtUserName" runat="server" class="form-control" placeholder="Modelo" name="Modelo" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtModelo" Enabled="true"
                                                            Display="None" ValidationGroup="Modelo" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtPassword" runat="server" class="form-control" placeholder="N. Serie" name="N. Serie">
                                <asp:RequiredFieldValidator ID="NSerie" runat="server" ControlToValidate="txtNSerie" Enabled="true"
                                                            Display="None" Text="Required" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtUserName" runat="server" class="form-control" placeholder="Descripción" name="Descripción" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtDescripcion" Enabled="true"
                                                            Display="None" ValidationGroup="Descripción" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtUserName" runat="server" class="form-control" placeholder="Color" name="Color" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtColor" Enabled="true"
                                                            Display="None" ValidationGroup="Color" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="dropdown">
                                    <button class="btn btn-success dropdown-toggle btn-sm btn-block" type="button" id="statusDropdown" data-toggle="dropdown">
                                        Estatus
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="statusDropdown">
                                        <a class="dropdown-item" href="#">Activo</a>
                                        <a class="dropdown-item" href="#">Inactivo</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle btn-sm btn-block" type="button" id="statusDropdown" data-toggle="dropdown">
                                        Check
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="statusDropdown">
                                        <a class="dropdown-item" href="#">Check In</a>
                                        <a class="dropdown-item" href="#">Check Out</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                      <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                   <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle btn-sm btn-block" type="button" id="TipoDispositivo" data-                                     toggle="dropdown">
                                        Tipo de Dispositivo
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="TipoDispositivo">
                                        <a class="dropdown-item" href="#">Silla</a>
                                        <a class="dropdown-item" href="#">Monitor / Pantalla</a>
                                        <a class="dropdown-item" href="#">Laptop</a>
                                        <a class="dropdown-item" href="#">Router</a>
                                        <a class="dropdown-item" href="#">Impresora</a>
                                        <a class="dropdown-item" href="#">Desktop</a>
                                        <a class="dropdown-item" href="#">WIFI Repeater</a>
                                        <a class="dropdown-item" href="#">Otros ________________</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Pie del Modal -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>
