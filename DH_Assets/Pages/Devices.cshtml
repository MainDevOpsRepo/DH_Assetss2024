@page
@model DevicesModel
@{
    ViewData["Title"] = "Devices";
}
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DH_Assets.styles.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <!-- Page Content-->
    <div class="container px-4 px-lg-5">
        <!-- Heading Row-->
        <div class="row gx-4 gx-lg-5 align-items-center my-5">

            <h1>Dispositivos</h1>
            <p>
                Sección dedicada a la información básica de la compañía. Esta información es necesaria para asignarle los datos
                al inventario de Dispositivos.
            </p>
    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                            <th scope="col">Nombre de Compañía</th>
                            <th scope="col">Dirección</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Compañía</th>
                            <th scope="col">Email</th>
                            <th scope="col">Estatus</th>
                            <th scope="col">Editar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Company A</td>
                    <td>123 Main St, City, Country</td>
                    <td>(123) 456-7890</td>
                    <td>Main Contact</td>
                    <td>info@companya.com</td>
                    <td>Active</td>
                            <td>
                                <button type="button" data-toggle="modal" data-target="#miModal" class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </button>
                            </td>
                        </tr>
                <tr>
                    <td>Company B</td>
                    <td>456 Elm St, City, Country</td>
                    <td>(987) 654-3210</td>
                    <td>Support</td>
                    <td>contact@companyb.com</td>
                    <td><span class="badge bg-danger">Inactive</span></td>
                            <td>
                                <button type="button" data-toggle="modal" data-target="#miModal" class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </button>
                            </td>
                        </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
   </div>
 </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <!------------------------- MODAL------------------------------>

    <div class="modal" id="miModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Encabezado del Modal -->
                <div class="modal-header">
                    <h5 class="modal-title">Editar información de los Dispositivos</h5>
                    <button type="button" id="closebutton" style="align-content:end" class="close ml-auto" data-dismiss="modal">&times;</button>
                </div>

                <!-- Contenido del Modal -->

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtCompanyName" runat="server" class="form-control" placeholder="CompanyName" name="Nombre de la Compañía" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtCompanyName" Enabled="true"
                                                            Display="None" ValidationGroup="CompanyName" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtApellidos" runat="server" class="form-control" placeholder="CompanyAddress" name="Dirección" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtCompanyAddress" Enabled="true"
                                                            Display="None" ValidationGroup="CompanyAddress" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtUserName" runat="server" class="form-control" placeholder="CompanyPhone" name="Teléfono" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtCompanyPhone" Enabled="true"
                                                            Display="None" ValidationGroup="CompanyPhone" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtPassword" runat="server" class="form-control" placeholder="CompanyData" name="Compañía">
                                <asp:RequiredFieldValidator ID="rfLastName" runat="server" ControlToValidate="txtCompanyData" Enabled="true"
                                                            Display="None" Text="Required" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtUserName" runat="server" class="form-control" placeholder="CompanyEmail" name="Email" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtCompanyEmail" Enabled="true"
                                                            Display="None" ValidationGroup="CompanyEmail" CssClass="mpr-validation-messages" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="dropdown">
                                    <button class="btn btn-success dropdown-toggle btn-sm btn-block" type="button" id="statusDropdown" data-toggle="dropdown">
                                        Estatus
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="statusDropdown">
                                        <a class="dropdown-item" href="#">Activo</a>
                                        <a class="dropdown-item" href="#">Inactivo</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Pie del Modal -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>
