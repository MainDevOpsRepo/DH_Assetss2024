    <!------------------------- MODAL------------------------------>

    <div class="modal" id="miModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Encabezado del Modal -->
                <div class="modal-header">
                    <div class="col-md-7">
                        <h5 class="modal-title">Editar información de los Consultores</h5>
                    </div>
                    <div class="w-100">
                        <button type="button" id="closebutton" class="close ml-auto" data-dismiss="modal">&times;</button>
                    </div>
                </div>

                <!-- Contenido del Modal -->

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="txtCompanyName" runat="server" class="form-control" placeholder="CompanyName" name="Nombre de la Compañía" autofocus>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtCompanyName" Enabled="true"
