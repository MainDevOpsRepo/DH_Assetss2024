@page
@model DH_Assets.Pages.NotificationsModel
@{
    ViewData["Title"] = "Notifications";
}
<html lang="en">

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DH_Assets.styles.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    <!-- Page Content-->

    <div class="container">

        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-1 text-left">
                    <h1>Notificaciones</h1>
                </div>
            </div>
        </div>

        <div class="container">
            <asp:LinqDataSource ID="Notifications" runat="server"
                                ContextTypeName="Notifications"
                                EnableDelete="true" EnableInsert="true" EnableUpdate="true"
                                TableName="Notifications">
            </asp:LinqDataSource>

            <asp:GridView ID="Notifications" runat="server"
                          AutoGenerateColumns="False"
                          DataKeyNames=""
                          DataSourceID="Notifications">
                <Columns>
                    <asp:CommandField ShowDeleteButton="True"
                                      ShowEditButton="True"/>
                    <asp:BoundField DataField="Origin" HeaderText="Origen" />
                    <asp:BoundField DataField="Title" HeaderText="Título" />
                    <asp:BoundField DataField="Date" HeaderText="Fecha" DataFormatString="{0:MM/dd/yyyy}" />
                </Columns>
            </asp:GridView>
        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div id="load"></div>
    <!-- Bootstrap core JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>